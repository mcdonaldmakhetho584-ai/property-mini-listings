<template>
  <div class="card">
    <div class="badge" v-if="!property.available">Not Available</div>

    <img :src="property.image" :alt="property.title" width="100%" />

    <h3>{{ property.title }}</h3>
    <p><strong>Location:</strong> {{ property.location }}</p>
    <p><strong>Type:</strong> {{ property.type }}</p>
    <p class="price">${{ property.price.toLocaleString() }}</p>

    <button @click="$emit('toggle-bookmark', property.id)">
      {{ property.bookmarked ? "★ Bookmarked" : "☆ Bookmark" }}
    </button>
  </div>
</template>

<script>
export default {
  name: "PropertyCard",
  props: {
    property: Object,
  },
};
</script>

